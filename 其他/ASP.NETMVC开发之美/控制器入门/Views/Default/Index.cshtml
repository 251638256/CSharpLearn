    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.Partial("Create", new 控制器入门.Models.受检者个人信息())*@
    <a onclick="Create()">创建</a>
    <a onclick="Edit()">编辑</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Chind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Smoke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.基本信息ID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Chind)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Smoke)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.基本信息ID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<script>
    function Create() {
        layer.open({
            type: 2,
            title: false,
            closeBtn: 0, //不显示关闭按钮
