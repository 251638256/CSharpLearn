
@{
    //ViewBag.Title = "Index";
    Layout = null;
}
<html>
<head>
    <title>标题</title>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10" style="background:#ccc;">Hello</div>
            <div class="col-lg-2" style="background:blue;">World</div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="padding:0;">
                <table style="width:100%;">
                    <thead>
                        <tr>
                            <td style="background:#808080;">1</td>
                            <td style="background:red;">2</td>
                            <td style="background:#ffd800;">3</td>
                            <td style="background:#a81b1b;">4</td>
                            <td style="background:#a81b1b;">5</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="background:#000;">
                            <td>1</td>
                            <td>2</td>
                            <td>3</td>
                            <td>4</td>
                            <td>5</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2" style="background:#4ad46f;">呵呵</div>
            <div class="col-lg-2 col-lg-offset-2" style="background:#dadc51;">似懂非懂</div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="padding:0;">
                <form>
                    <div class="form-group">
                        <label>姓名:</label>
                        <input type="text" value="" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>性别:</label>
                        <select class="form-control">
                            <option value="男">男</option>
                            <option value="女">女</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

